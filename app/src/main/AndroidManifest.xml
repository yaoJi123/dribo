<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yao.dribo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".DriboApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name="com.yao.dribo.bucket.ChooseBucketActivity"/>
        <activity android:name="com.yao.dribo.shot_main.ShotActivity"/>
        <activity android:name="com.yao.dribo.bucket.BucketShotListActivity"/>
        <activity
            android:name="com.yao.dribo.auth.AuthActivity"
            android:windowSoftInputMode="adjustPan"/>

